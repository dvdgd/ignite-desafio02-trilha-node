{
  "openapi": "3.0.0",
  "info": {
    "title": "User Control Documentation",
    "description": "This API is an educational test which provides a user control",
    "version": "1.0.0",
    "contact": {
      "email": "dvd.gd762@gmail.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Create user",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Required fields to create a user",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "User Example",
                  "required": true
                },
                "email": {
                  "type": "string",
                  "example": "user@example.com",
                  "required": true
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "User already exists"
          }
        }
      },
      "get": {
        "tags": ["Users"],
        "summary": "Get users",
        "description": "Return all users",
        "produces": ["application/json"],
        "consumes": ["application/json"],
        "parameters": [
          {
            "in": "header",
            "name": "user_id",
            "description": "Use user-id which is an admin",
            "required": true,
            "type": "string",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/users/{user-id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Gets the user info",
        "description": "Return all users",
        "produces": ["application/json"],
        "consumes": ["application/json"],
        "parameters": [
          {
            "in": "path",
            "name": "user-id",
            "required": true,
            "type": "string",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/users/{user-id}/admin": {
      "patch": {
        "tags": ["Users"],
        "summary": "Turns a user in admin with",
        "produces": ["application/json"],
        "consumes": ["application/json"],
        "parameters": [
          {
            "in": "path",
            "name": "user-id",
            "required": true,
            "type": "string",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    }
  }
}
